<Window x:Class="TaskManager.Views.TaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Dialog"
        Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Form -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Title:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,15" Padding="5"/>

                <!-- Description -->
                <TextBlock Text="Description:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Description}" 
                         Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                         Margin="0,0,0,15" Padding="5"/>

                <!-- Status and Priority -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Status:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding StatusOptions}"
                                  SelectedItem="{Binding Status}" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Priority:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding PriorityOptions}"
                                  SelectedItem="{Binding Priority}" Padding="5"/>
                    </StackPanel>
                </Grid>

                <!-- Due Date and Hours -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Due Date:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding DueDate}" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Estimated Hours:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding EstimatedHours}" Padding="5"/>
                    </StackPanel>
                </Grid>

                <!-- Assigned To -->
                <TextBlock Text="Assigned To:" FontWeight="Bold" Margin="0,0,0,5"/>
                
                <!-- Person Selection or Add New -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Existing combo or Add new person form -->
                    <ComboBox Grid.Column="0"
                              ItemsSource="{Binding People}"
                              SelectedItem="{Binding SelectedPerson}"
                              DisplayMemberPath="Name" Padding="5">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAddingNewPerson}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                    
                    <!-- Add Person Button -->
                    <Button Grid.Column="2" Content="+" Width="30" Height="30"
                            FontWeight="Bold" FontSize="16"
                            ToolTip="Add new person"
                            Click="AddPersonButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAddingNewPerson}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Add New Person Form (hidden by default) -->
                    <StackPanel Grid.Column="0" Grid.ColumnSpan="3">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAddingNewPerson}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        
                        <TextBlock Text="New Person Name:" FontSize="11" Margin="0,0,0,3"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" 
                                     Text="{Binding NewPersonName, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="5"/>
                            
                            <Button Grid.Column="2" Content="✓" Width="30" Height="30"
                                    Background="Green" Foreground="White" FontWeight="Bold"
                                    ToolTip="Save person" Click="SavePersonButton_Click"/>
                            
                            <Button Grid.Column="4" Content="✗" Width="30" Height="30"
                                    Background="Red" Foreground="White" FontWeight="Bold"
                                    ToolTip="Cancel" Click="CancelPersonButton_Click"/>
                        </Grid>
                    </StackPanel>
                </Grid>

                <!-- Tags -->
                <TextBlock Text="Tags (comma separated):" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding TagsText}" 
                         Margin="0,0,0,15" Padding="5"
                         ToolTip="Enter tags separated by commas"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Width="80" Margin="0,0,10,0"
                    Command="{Binding SaveCommand}" IsDefault="True"
                    Background="DodgerBlue" Foreground="White" Padding="5"/>
            <Button Content="Cancel" Width="80"
                    Command="{Binding CancelCommand}" IsCancel="True"
                    Padding="5"/>
        </StackPanel>
    </Grid>
</Window>